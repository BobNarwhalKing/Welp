<style> table, th, td {
    border: 1px solid;
}
    table {
        height: 100px
    }
    .image_cap{
        max-height:300px;
        width: 100%;
    }
    
</style>

<h1> Home Page </h1>

<table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Username</th>
        <th>Balance</th>
        <th>Description</th>
        <th>Image_URL</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @customer.name %></td>
            <td><%= @customer.username %></td>
            <td><%= @customer.balance %></td>
            <td><%= @customer.description %></td>
            <td><img class= 'image_cap' src="<%= @customer.img_url %>" alt="<%=@customer.name %>" /> </td>
            </tr>
    </tbody>
</table>
<h5>My Reviews</h5>
<table>
    <thead>
        <tr>
        <th>Review</th>
        <th>Restaurant</th>
        <th>Rating</th>
        <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <tr> <% @customer.reviews.each do |review| %>
            <td><%= review.subject %></td>
            <td><%= review.restaurant.name %></td>
            <td><%= review.rating %></td>
            <td><%= link_to "Show", review_path(review.id) %></td>
            </tr>
            <% end %>
    </tbody>
</table>
<h5>My Orders</h5>
<table>
    <thead>
        <tr>
        <th>Order</th>
        <th>Restaurant</th>
        <th>Price</th>
        <th>Ordered Items</th>
        <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <tr> <% @customer.orders.each do |order| %>
            <td><%= order.id %></td>
            <td><%= order.restaurant.name %></td>
            <td><%= order.price %></td>
            <td><%= order.foods.map {|food| food.name } %></td>
            </tr>
            <% end %>
    </tbody>
</table><br>

<%=link_to "Edit my profile", edit_customer_path(@customer.id)%><br>
<%=link_to "Delete my profile", customer_path(@customer.id), method: "DELETE"%>
<%=link_to "Restaurants", restaurants_path %>
<%=link_to "Add a Review", new_review_path %>
<%=link_to "Restaurants", restaurants_path %>
<%link_to "Next", customer_path(@customer.increment)%><br>
<%link_to "Back", customer_path(@customer.decrement)%><br>
<%link_to "All Customers", customers_path%><br>
</body>

