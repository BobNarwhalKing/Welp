    <div class= "container" style = "text-align: center">
        <div class="not-bootstrap-column-right">
                <div class="textBox justify-content-right white_row">
                    <table class="table">
                        <thead>
                            <tr class="orange">
                            <th scope="col" class="wide_column justify-content-right"><%=@restaurant.name%></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            <td><%=@restaurant.restaurant_type%></td>
                            </tr>
                            <tr>
                            <td><%=@restaurant.rating%></td>
                            </tr>
                            <tr>
                            <td><%=@restaurant.description%></td>
                            </tr>
                            <td><%=link_to "Place Order", new_order_path%></td>
                            </tr>
                            </tr>
                            <td><%=link_to "Create Review", new_review_path%></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
               <a class="btn btn-primary btn-lg al" href="<%=customer_path(session[:customer_id])%>">Home</a> 
        </div>
    </div>
